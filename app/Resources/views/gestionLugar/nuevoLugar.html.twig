{# Plantilla de nuestra aplicaci√≥n #}
{% extends 'base.html.twig' %}
{% form_theme form 'form/lugarForm.html.twig' %}

{#  TITULO #}
{% block title %}
Nuevo Lugar
{% endblock %}
{#  CONTENIDO #}
{% block contenidoDF %}
<!-- Page Content -->
<div class="container">
  <!-- Page Heading -->
  <h1 class="mt-4 mb-3">Nuevo lugar</h1>

  <div class="row">
    <div class="col-md-8">
      {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="control-group form-group">
          {{ form_label(form.nombre) }}
          {{ form_errors(form.nombre) }}
          {{ form_widget(form.nombre) }}
        </div>
          <div class="control-group form-group">
          {{ form_label(form.descripcion) }}
          {{ form_errors(form.descripcion) }}
          {{ form_widget(form.descripcion) }}
        </div>
      
        <div class="control-group form-group">
          {{ form_label(form.opciones) }}
          {{ form_errors(form.opciones) }}
          {{ form_widget(form.opciones) }}
        </div>

        <div class="control-group form-group">
          {{ form_label(form.categoria) }}
          {{ form_errors(form.categoria) }}
          {{ form_widget(form.categoria) }}
        </div>

         <div class="control-group form-group">
          {{ form_label(form.foto) }}
          {{ form_errors(form.foto) }}
          {{ form_widget(form.foto) }}
        </div>

        <div class="control-group form-group">
          {{ form_label(form.top) }}
          {{ form_errors(form.top) }}
          {{ form_widget(form.top) }}
        </div>
      
      
        <div>
          {{ form_widget(form.save) }}
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
  <script type="text/javascript" src="{{asset('js/newImgLugar.js')}}"></script>
  <script type="text/javascript" src="{{asset('js/nuevaCatAdd.js')}}"></script>
{% endblock %}
